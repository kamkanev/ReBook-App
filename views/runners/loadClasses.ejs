<% if(classes.length > 0){ %>
  <div style = "height: 60px;">
	</div>
  <div class="container">
    <% classes.forEach((classRoom) => { %>

        <% if(classRoom.members.includes(user.id)){ %>

          <!-- Join Group -->
          <a href="/class/<%= classRoom.id %>">
            <div class="card mb-3" style="max-width: 1000px;">
            <div class="row no-gutters">
              <div>
                <!-- <svg class="bd-placeholder-img" width="100%" height="250" xmlns="" aria-label="Placeholder: Image" preserveAspectRatio="xMidYMid slice" role="img"><title>Placeholder</title><rect width="100%" height="100%" fill="#868e96"/><text x="50%" y="50%" fill="#dee2e6" dy=".3em">Image</text></svg> -->
                <img style = "margin-left: 30px; margin-top: 10px; margin-bottom: 14px;" width="95" height="100" src="<%= classRoom.icon %>" alt="">
              </div>
              <div class="col-md-10">
                <div class="card-body">
                  <h5 class="card-title"><b><%= classRoom.name %> <span class="badge badge-pill badge-<%= classRoom.type == 'private' ? 'info' : 'primary' %>"><%= classRoom.type %></span></b></h5>
                  <p style = "font-style: none;": none;" class="card-text"><%= classRoom.description %></p>
                  <p class="card-text"><small style = "float: right;" class="text-muted">Създадена на: <%= new Date(classRoom.timeOfCreation).toISOString().split('T')[0] %></small>
                  <small style = "float: left;" class="cardd-members"><%= classRoom.members.length %> участници</small></p>
                </div>
              </div>
            </div>
          </div>
          </a>
        <br>


          <% return; %>

      <% }else{ %>

        <div class="card mb-3" style="max-width: 1000px;">
        <div class="row no-gutters">
          <div>
            <!-- <svg class="bd-placeholder-img" width="100%" height="250" xmlns="" aria-label="Placeholder: Image" preserveAspectRatio="xMidYMid slice" role="img"><title>Placeholder</title><rect width="100%" height="100%" fill="#868e96"/><text x="50%" y="50%" fill="#dee2e6" dy=".3em">Image</text></svg> -->
            <img style = "margin-left: 30px; margin-top: 10px;" width="95" height="100" src="<%= classRoom.icon %>" alt="">
          </div>
          <div class="col-md-10">
            <div class="card-body">
              <h5 class="card-title"><b><%= classRoom.name %> <span class="badge badge-pill badge-<%= classRoom.type == 'private' ? 'info' : 'primary' %>"><%= classRoom.type %></span></b></h5>
              <p style = "margin-bottom: 0px;" class="card-text"><%= classRoom.description %></p>
			           <button style = "background-color: #368f1b;" type="button" onclick="addToClass('<%= classRoom.name %>', '<%= classRoom.password %>')" class="bttn btn-danger -small card-bttn"><b>Влез в стаята</b></button><br>
              <p style = "margin-bottom: 15px;" class="card-text"><small style = "float: right;" class="text-muted">Създадена на: <%= new Date(classRoom.timeOfCreation).toISOString().split('T')[0] %></small>
              <small style = "float: left;" class="cardd-members"><%= classRoom.members.length %> участници</small></p>

            </div>
          </div>
        </div>
      </div>
      <br>

      <% } %>

    <% }); %>
  </div>
<% }else{ %>
      <h1 style = "text-align: center; margin: auto; padding: 350px 0 350px 0">Няма съществуващи стаи</h1>
<% } %>
